{
  "name": "resin-lint",
  "version": "3.1.1",
  "description": "Resin.io coffeelint & coffeescope2 wrapper",
  "bin": "./bin/resin-lint",
  "main": "./build/resin-lint.js",
  "homepage": "https://github.com/resin-io/node-resin-lint",
  "repository": {
    "type": "git",
    "url": "git@github.com:resin-io/node-resin-lint"
  },
  "scripts": {
    "build": "npm run prettify && tsc && npm run lint",
    "lint": "./bin/resin-lint lib/",
    "prepublish": "require-npm4-to-publish",
    "prepublishOnly": "npm run test",
    "prettify": "prettier --config ./config/.prettierrc --write \"lib/**/*.ts\"",
    "test": "npm run build && npm run test:coffeescript && npm run test:typescript && npm run test:typescript-no-prettier",
    "test:coffeescript": "./bin/resin-lint test/coffeescript -i",
    "test:typescript": "./bin/resin-lint test/typescript/prettier --typescript -i",
    "test:typescript-no-prettier": "./bin/resin-lint test/typescript/no-prettier --typescript -i --no-prettier"
  },
  "keywords": [
    "resin",
    "coffeescript",
    "coffeelint"
  ],
  "author": "Kostas Lekkas <kostas@resin.io",
  "license": "Apache 2.0",
  "dependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/depcheck": "^0.6.0",
    "@types/glob": "^5.0.35",
    "@types/node": "^8.10.45",
    "@types/optimist": "0.0.29",
    "@types/prettier": "^1.18.3",
    "bluebird": "^3.5.4",
    "coffee-script": "^1.10.0",
    "coffeelint": "^1.15.0",
    "coffeescope2": "^0.4.5",
    "depcheck": "^0.6.7",
    "glob": "^7.0.3",
    "merge": "^1.2.0",
    "optimist": "^0.6.1",
    "prettier": "^1.19.1",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.4.3"
  },
  "devDependencies": {
    "require-npm4-to-publish": "^1.0.0"
  }
}
